<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/img_i"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_i"
            app:layout_constraintEnd_toStartOf="@id/img_heart"
            app:layout_constraintHorizontal_chainStyle="packed"/>

    <ImageView
            android:id="@+id/img_heart"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toStartOf="@id/img_beer"
            app:layout_constraintStart_toEndOf="@id/img_i"
            app:srcCompat="@drawable/ic_heart"/>

    <ImageView
            android:id="@+id/img_beer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_heart"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_beer"/>


</android.support.constraint.ConstraintLayout>